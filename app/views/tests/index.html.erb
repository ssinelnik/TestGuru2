<% provide(:title, 'Tests') %>
<h1 class="display-3"> <%= I18n.t('tests.index.header') %></h1>

<p><%= link_to t('shared.links.user_badges'), badges_path, class: "btn btn-primary" %></p>

<table class="table table-hover">
  <tbody>
  <tr class="table-primary">
    <th scope="col" class="sort-by-title pointer text-center" class="sort-by-title pointer">
      <%=t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th scope="col" class="text-center"><%= t('.level') %></th>
    <th scope="col" class="text-center"><%= t('.count') %></th>
    <th colspan="3" scope="col" class="text-center"><%= t('.actions') %></th>
  </tr>

  <%= render @tests  %>
  <tbody>
</table>
